<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" type="userNickName"></open-data>
  </view>
  <view class="banner">
    <image src="../../images/worldcup.jpg"></image>
    <view class="content">
      <text>穿越球场，看看你是哪一位球星？</text>
    </view>
  </view>
  <view class="confirm-btn">
    <button type='primary' bindtap="bindViewTap" >点击合体</button>
  </view>
</view>